{
  "metadata": [
    {
      "src": [
        {
          "files": [ "*.csproj" ],
          "cwd": ".",
          "exclude": [ "**/obj/**", "**/bin/**", "_site/**" ]
        }
      ],
      "dest": "obj/api"
    }
  ],
  "build": {
    "sitemap": {
      "baseUrl": "https://learn.otimizenesting.com",
      "priority": 0.1,
      "changefreq": "daily"
    },
    "content": [
      {
        "files": [ "api/**.yml" ],
        "src": "obj",              // picks up obj/api/*.yml
        "dest": "api"
      },
      {
        "files": [ "api/*.md", "articles/**.md", "tutorial/**.md", "tutorial/**.yml", "toc.yml", "*.md" ],
        "src": "en-us",
        "exclude": [ "obj/**", "_site/**" ]
      },
      {
        "files": [ "api/*.md", "articles/**.md", "tutorial/**.md", "tutorial/**.yml", "toc.yml", "*.md" ],
        "src": "pt-br",
        "exclude": [ "obj/**", "_site/**" ],
        "dest": "pt-br"
      }
    ],
    "resource": [
      {
        "files": [ "**/*.png", "images/**", "favicon.ico" ],
        "src": "en-us",
        "exclude": [ "obj/**", "_site/**" ]
      },
      {
        "files": [ "**/*.png", "images/**", "favicon.ico" ],
        "src": "pt-br",
        "exclude": [ "obj/**", "_site/**" ],
        "dest": "pt-br"
      }
    ],
    "overwrite": [
      {
        "files": [ "apidoc/**.md" ],
        "src": "en-us",
        "exclude": [ "obj/**", "_site/**" ]
      },
      {
        "files": [ "apidoc/**.md" ],
        "src": "pt-br",
        "exclude": [ "obj/**", "_site/**" ],
        "dest": "pt-br"
      }
    ],
    "postProcessors": [ "ExtractSearchIndex" ],
    "globalMetadata": {
      "_enableSearch": "true"
    },
    "fileMetadata": {
      "_ptBr": {
        "pt-br/**": true
      },
      "_enUs": {
        "en-us/**": true
      }
    },
    "dest": "_site",
    "template": [ "default", "en-us/templates/otimize", "pt-br/templates/otimize" ]
  }
}
