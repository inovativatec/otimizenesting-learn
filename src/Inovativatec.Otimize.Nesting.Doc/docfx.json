{
  "metadata": [
    {
      "src": [
        {
          "files": ["*.csproj"],
          "cwd": ".",
          "exclude": ["**/obj/**", "**/bin/**", "_site/**"]
        }
      ],
      "dest": "obj/api"
    }
  ],
  "build": [
    {
      "content": [
        {
          "src": "en-us",
          "dest": "en-us"
        }
      ],
      "template": [
        "en-us/templates/otimize"
      ],
      "dest": "_site/en-us"
    },
    {
      "content": [
        {
          "src": "pt-br",
          "dest": "pt-br"
        }
      ],
      "template": [
        "pt-br/templates/otimize"
      ],
      "dest": "_site/pt-br"
    }
  ]
}
