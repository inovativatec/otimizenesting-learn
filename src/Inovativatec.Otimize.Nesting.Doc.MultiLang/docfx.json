{
  "metadata": [
    {
      "src": [
        {
          "files": ["*.csproj"],
          "cwd": ".",
          "exclude": ["**/obj/**", "**/bin/**", "_site/**"]
        }
      ],
      "dest": "obj/api"
    }
  ],
  "build": {
    "sitemap": {
      "baseUrl": "https://learn.otimizenesting.com",
      "priority": 0.1,
      "changefreq": "daily"
    },
    "content": [
      {
        "files": ["api/**.yml"],
        "cwd": "en-us/obj",
        "dest": "en-us"
      },
      {
        "files": ["api/**.yml"],
        "cwd": "pt-br/obj",
        "dest": "pt-br"
      },
      {
        "files": ["api/*.md", "articles/**.md", "tutorial/**.md", "tutorial/**.yml", "toc.yml", "*.md"],
        "cwd": "en-us",
        "exclude": ["obj/**", "_site/**"],
        "dest": "en-us"
      },
      {
        "files": ["api/*.md", "articles/**.md", "tutorial/**.md", "tutorial/**.yml", "toc.yml", "*.md"],
        "cwd": "pt-br",
        "exclude": ["obj/**", "_site/**"],
        "dest": "pt-br"
      }
    ],
    "resource": [
      { "files": ["**/*.png", "images/**", "favicon.ico"], "cwd": "en-us", "exclude": ["obj/**", "_site/**"], "dest": "en-us" },
      { "files": ["**/*.png", "images/**", "favicon.ico"], "cwd": "pt-br", "exclude": ["obj/**", "_site/**"], "dest": "pt-br" }
    ],
    "overwrite": [
      { "files": ["apidoc/**.md"], "cwd": "en-us", "exclude": ["obj/**", "_site/**"], "dest": "en-us" },
      { "files": ["apidoc/**.md"], "cwd": "pt-br", "exclude": ["obj/**", "_site/**"], "dest": "pt-br" }
    ],
    "postProcessors": ["ExtractSearchIndex"],
    "globalMetadata": {
      "_enableSearch": "true"
    },
    "dest": "_site",
    "template": ["default", "en-us/templates/otimize", "pt-br/templates/otimize"]
  }
}
