{
  "metadata": [
    {
      "src": [
        {
          "files": ["*.csproj"],
          "cwd": ".",
          "exclude": ["**/obj/**", "**/bin/**", "_site/**"]
        }
      ],
      "dest": "obj/api"
    }
  ],
  "build": {
    "sitemap": {
      "baseUrl": "https://learn.otimizenesting.com",
      "priority": 0.1,
      "changefreq": "daily"
    },
    "content": [
      {
        "files": ["api/**.yml"],
        "cwd": "en-US/obj"
      },
      {
        "files": ["api/**.yml"],
        "cwd": "pt-BR/obj"
      },
      {
        "files": ["api/*.md", "articles/**.md", "tutorial/**.md", "tutorial/**.yml", "toc.yml", "*.md"],
        "cwd": "en-US",
        "exclude": ["obj/**", "_site/**"]
      },
      {
        "files": ["api/*.md", "articles/**.md", "tutorial/**.md", "tutorial/**.yml", "toc.yml", "*.md"],
        "cwd": "pt-BR",
        "exclude": ["obj/**", "_site/**"]
      }
    ],
    "resource": [
      { "files": ["**/*.png", "images/**", "favicon.ico"], "cwd": "en-US", "exclude": ["obj/**", "_site/**"] },
      { "files": ["**/*.png", "images/**", "favicon.ico"], "cwd": "pt-BR", "exclude": ["obj/**", "_site/**"] }
    ],
    "overwrite": [
      { "files": ["apidoc/**.md"], "cwd": "en-US", "exclude": ["obj/**", "_site/**"] },
      { "files": ["apidoc/**.md"], "cwd": "pt-BR", "exclude": ["obj/**", "_site/**"] }
    ],
    "postProcessors": ["ExtractSearchIndex"],
    "globalMetadata": {
      "_enableSearch": "true"
    },
    "dest": "_site",
    "template": ["default", "templates/otimize"]
  }
}
